<Window x:Class="RecipeManagementAppWPF.AddRecipe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeManagementAppWPF"
        mc:Ignorable="d"
        Title="AddRecipe" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Add a New Recipe" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold" Margin="0 0 0 20"/>

            <TextBlock Text="Recipe Name:" FontSize="16"/>
            <TextBox x:Name="RecipeNameTextBox" FontSize="16" Margin="0 0 0 20"/>

            <TextBlock Text="Number of Ingredients:" FontSize="16"/>
            <TextBox x:Name="NumIngredientsTextBox" FontSize="16" Margin="0 0 0 20"/>

            <Button Content="Add Ingredients" FontSize="16" Click="AddIngredientsBtn_Click" Margin="0 0 0 20"/>

            <TextBlock Text="Number of Steps:" FontSize="16"/>
            <TextBox x:Name="NumStepsTextBox" FontSize="16" Margin="0 0 0 20"/>

            <Button Content="Add Steps" FontSize="16" Click="AddStepsBtn_Click" Margin="0 0 0 20"/>

            <Button Content="Save Recipe" FontSize="16" Click="SaveRecipeBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
