<Window x:Class="RecipeManagementAppWPF.AddSteps"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeManagementAppWPF"
        mc:Ignorable="d"
        Title="AddSteps" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Add Step" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold" Margin="0 0 0 20"/>

            <TextBlock Text="Step Description:" FontSize="16"/>
            <TextBox x:Name="StepDescriptionTextBox" FontSize="16" Margin="0 0 0 20"/>

            <Button Content="Add" FontSize="16" Click="AddStepBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
