<Window x:Class="RecipeManagementAppWPF.AddIngredient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeManagementAppWPF"
        mc:Ignorable="d"
        Title="AddIngredient" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
        <TextBlock Text="Add Ingredient" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold" Margin="0 0 0 20"/>

        <TextBlock Text="Name:" FontSize="16"/>
        <TextBox x:Name="NameTextBox" FontSize="16" Margin="0 0 0 20"/>

        <TextBlock Text="Quantity:" FontSize="16"/>
        <TextBox x:Name="QuantityTextBox" FontSize="16" Margin="0 0 0 20"/>

        <TextBlock Text="Unit:" FontSize="16"/>
        <TextBox x:Name="UnitTextBox" FontSize="16" Margin="0 0 0 20"/>

        <TextBlock Text="Calories:" FontSize="16"/>
        <TextBox x:Name="CaloriesTextBox" FontSize="16" Margin="0 0 0 20"/>

        <TextBlock Text="Food Group:" FontSize="16"/>
        <TextBox x:Name="FoodGroupTextBox" FontSize="16" Margin="0 0 0 20"/>

        <Button Content="Add" FontSize="16" Click="AddBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
