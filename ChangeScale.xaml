<Window x:Class="RecipeManagementAppWPF.ChangeScale"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeManagementAppWPF"
        mc:Ignorable="d"
        Title="ChangeScale" Height="150" Width="300">
    <Grid>
        <Label Content="Enter Scale Factor:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="ScaleFactorTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="111,4,0,0" Width="28"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Orientation="Horizontal">
            <Button Content="Change Scale" Width="100" Margin="10" Click="ChangeScaleBtn_Click"/>
            <Button Content="Cancel" Width="100" Margin="10" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
