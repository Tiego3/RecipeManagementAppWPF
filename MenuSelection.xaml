<Window x:Class="RecipeManagementAppWPF.MenuSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Recipes for Menu" Height="400" Width="300">
    <Grid>
        <ListBox x:Name="RecipesListBox" SelectionMode="Multiple" />
        <Button Content="Add to Menu" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Width="100" Click="AddToMenuBtn_Click"/>

    </Grid>
</Window>
