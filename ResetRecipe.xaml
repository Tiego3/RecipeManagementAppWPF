<Window x:Class="RecipeManagementAppWPF.ResetRecipe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeManagementAppWPF"
        mc:Ignorable="d"
        Title="ResetRecipe" Height="150" Width="350">
    <Grid>
        <Label Content="Are you sure you want to reset this recipe to its original values?" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Orientation="Horizontal">
            <Button Content="Reset Recipe" Width="100" Margin="10" Click="ResetRecipeBtn_Click"/>
            <Button Content="Cancel" Width="100" Margin="10" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
