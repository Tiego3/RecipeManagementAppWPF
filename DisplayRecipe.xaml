<Window x:Class="RecipeManagementAppWPF.DisplayRecipe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeManagementAppWPF"
        mc:Ignorable="d"
        Title="DisplayRecipe" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Recipe Details" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold" Margin="0 0 0 20"/>

            <TextBlock Text="Recipe Name:" FontSize="18" FontWeight="Bold"/>
            <TextBlock x:Name="RecipeNameTextBlock" FontSize="18" Margin="0 0 0 20"/>

            <TextBlock Text="Ingredients:" FontSize="18" FontWeight="Bold"/>
            <ListBox x:Name="IngredientsListBox" FontSize="16" Margin="0 0 0 20"/>

            <TextBlock x:Name="CaloriesWarningTextBlock"  FontSize="18" FontWeight="Bold" Margin="0 0 0 20"/>
            
            <TextBlock Text="Steps:" FontSize="18" FontWeight="Bold"/>
            <ListBox x:Name="StepsListBox" FontSize="16" Margin="0 0 0 20"/>

            <Button Content="Close" FontSize="16" Click="CloseButton_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
